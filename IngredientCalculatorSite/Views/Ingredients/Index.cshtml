@using IngredientCalculator.Models
@model IEnumerable<Ingredient>

@{
    ViewBag.Title = "Ingredients";
}

<h2>Ingredients</h2>

<p>
    @Html.ActionLink("Add New Ingredient", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IngredientName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IngredientType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalPackageCost)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TotalPackageVolume)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Unit.UnitName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CostPerUnit)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ExpirationDays)
        </th>
        <th></th>
    </tr>

    @foreach (Ingredient item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.IngredientName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IngredientType.Type)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalPackageCost)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalPackageVolume)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Unit.UnitName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CostPerUnit)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ExpirationDays)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Details", "Details", new {  id=item.Id  }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

</table>
